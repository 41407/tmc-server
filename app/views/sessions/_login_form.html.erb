
<% if signed_in? %>
  <%= link_to "Sign out", signout_path, :method => :delete %>
<% else %>
  <%= form_for(:session, :url => sessions_path) do |f| %>
    <%= f.label :login %>
    <%= f.text_field :login, :size => 10 %>
  
    <%= f.label :password %>
    <%= f.password_field :password, :size => 10 %>
  
    <%= f.submit "Sign in" %>
  <% end %>
<% end %>

