
<h1>List of participants</h1>

<p>(Users with administrative privileges not included.)</p>

<p><%= link_to 'List of e-mails as plain-text', emails_path(:format => 'txt') %>.</p>

<table class="participants">
  <thead>
    <tr>
      <th>Username</th>
      <th>E-mail</th>
    </tr>
  </thead>
  <tbody>
  <% for user in @participants %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.email %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<div class="as-json">[<%= link_to "json", "#{participants_path :format => :json, :api_version => ApplicationController::API_VERSION}" %>]</div>

<%= use_datatables('table.participants', :bPaginate => false) %>

