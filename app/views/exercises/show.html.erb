
<h1><%= @exercise.name %></h1>

<ul>
  <li><%= link_to 'Download project template (zip)', @exercise.exercise_file %></li>
</ul>

<h2>Submit answer</h2>

<section>
  <%= render 'submissions/form' %>
</section>


<h2>Submissions</h2>

<section>
  <% if !@submissions.empty? %>
    <table>
      <tr>
        <th>Course</th>
        <th>Exercise</th>
        <th>Student</th>
        <th>Returned file</th>
        <th></th>
      </tr>

    <% @submissions.each do |submission| %> 

      <tr>
        <td><%= @course.name %></td>
        <td><%= @exercise.name %></td>
        <td><%= submission.student_id %></td>
          <% if signed_in? %>
            <td>
              <%= link_to("#{@exercise.name}-#{submission.id}.zip",
                    "#{course_exercise_submission_path(@course, @exercise, submission)}.zip") %> 
            </td>
            <td>
             <%= form_tag test_suite_runs_path, :id => "run-ex-return-#{submission.id}", :method => :post do %>
                <%= hidden_field_tag 'test_suite_run[submission_id]', submission.id %>
                <a href="#" onclick="javascript: document.getElementById('run-ex-return-<%=submission.id%>').submit()">Run</a>
              <% end %>
            </td>
            <td>
              <%= link_to 'Destroy', course_exercise_submission_path(@course, @exercise, submission), :confirm => 'Are you sure?', :method => :delete %>
            </td>
          <% else %>
             <td>
              <%= "#{@exercise.name}-#{submission.id}.zip" %>
             </td>
          <% end %>
       </tr>
    <% end %>
    </table>
  <% else %>
    <p>No submissions yet.</p>
  <% end %>
</section>

<%= link_to 'Back', course_exercises_path(@course) %>

