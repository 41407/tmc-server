<table class="exercise-list">
  <thead>
    <tr>
      <th>
        Exercise
      </th>
      <th>
        Deadline
      </th>
      <th>
        Download exercise
      </th>
    </tr>
  </thead>
  <tbody>
    <% exercises.each do |exercise| %>
      <tr>
        <td>
          <%= link_to exercise.name, [course, exercise] %>
          </td>
          <td>
            <% if exercise.deadline %>
              <%= exercise.deadline.strftime("%d.%m.%Y %H:%M") %>
            <% end %>
          </td>
          <td>
            <%= link_to 'zip', exercise.exercise_file %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="as-json">[<%= link_to "json", "#{course_exercises_path(course)}.json" %>]</div>

<%= use_datatables('table.exercise-list') %>

