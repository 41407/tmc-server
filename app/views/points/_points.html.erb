<table class="points">
  <thead>
    <tr>
      <th></th>
      <% @exercises.each do |exercise| %>
        <% points = exercise.available_points %>
        <% if points.size > 0 %>
          <th colspan="<%= points.size %>"><%= exercise.name %></th>
        <% end %>
      <% end %>
    </tr>
    <tr>
      <th></th>
      <% @exercises.each do |exercise| %>
        <% exercise.available_points.each do |point| %>
          <th><%= point.name %></th>
        <% end %>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% user_points = AwardedPoint.
          course_user_points(@course, user).map(&:name) %>
      <tr>
        <td><%= user.login %></td>
        <% @exercises.each do |exercise| %>
          <% exercise.available_points.each do |p| %>
            <td><%= raw("&#x2714;") if user_points.include?(p.name) %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

