
<table class="submissions">
  <thead>
    <th>Time</th>
    <th>Student</th>
    <th>Returned file</th>
    <th>Status</th>
    <th></th>
  </thead>
  <tbody>
    <% submissions.each do |submission| %> 
      <tr>
        <td><%= submission.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= submission.user.login %></td>
        <td>
          <%= link_to(submission.downloadable_file_name,
                "#{course_exercise_submission_path(submission.exercise.course, submission.exercise, submission)}.zip") %> 
        </td>
        <td>
          <%= submission_status(submission) %>
        </td>
        <td>
          <%= link_to 'Details', course_exercise_submission_path(submission.exercise.course, submission.exercise, submission)  %>
        </td>
       </tr>
    <% end %>
  </tbody>
</table>

<%= use_datatables('table.submissions') %>

