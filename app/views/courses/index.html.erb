
<h1>All Courses [<%= link_to "json", "#{courses_path}.json" %>]</h1>

<% if signed_in? %>
  <%= link_to 'Create New Course', new_course_path %>
  <% if flash[:alert] %>
    <p class="error"><%= flash[:alert] %></p>
  <% end %>

  <p>Non uploaded points to gdocs: <%= @num_points_in_queue %></p>
  <%= form_tag(upload_points_path) do %>
    <%= submit_tag("Upload points to gdocs") %>
  <% end %>
<% end %>

<h3>Ongoing courses</h3>
<%= render 'list', :locals => { :courses => @ongoing_courses } %>

<% if signed_in? and not @expired_courses.empty? %>
  <h3>Expired courses</h3>
  <%= render 'list', :locals => { :courses => @expired_courses } %>
<% end %>  
  

